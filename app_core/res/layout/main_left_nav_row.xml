<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="173.4dp"
    android:minHeight="173.4dp"
    android:padding="0.0px"
    >

    <ImageView
        android:id="@+id/mainLeftNaviImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fenlei_on"
        />
    <TextView
        android:id="@+id/mainLeftNaviText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainLeftNaviImage"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/left_nav_text"
        android:textSize="25px"
        android:layout_marginTop="20dp"
        />
    
    <ImageView
        android:id="@+id/indicatorImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/jiantou"
        android:visibility="gone" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="@color/divider_color"
        android:layout_alignParentBottom="true"
        />
    
    <TextView
        android:id="@+id/mainSelectHintText"
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/left_nav_text_selected"
        />

</RelativeLayout>